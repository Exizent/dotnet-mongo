    <PackageOutputPath>./nupkg</PackageOutputPath>

    <Copyright>2019</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/ndichiaro/dotnet-mongo</PackageProjectUrl>
